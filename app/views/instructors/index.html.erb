<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Instructors</h2>
        <button type="button" class="btn pull-right btn-primary" data-toggle="modal" data-target="#myModal5"> Add Instructor</button>
        <ol class="breadcrumb">
            <li>
                <a href="google.com">Home</a>
        </li>
        <li>
            App Views
        </li>
        <li class="active">
            <strong>Contacts</strong>
        </li>
    </ol>
</div>
        </div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">

<% @instructors.each do |instructor| %>
    <div class="col-lg-4">
        <div class="contact-box">
            <a href="<%  %>">
            <div class="col-sm-4">
                <div class="text-center">
                    <img alt="image" class="img-circle m-t-xs img-responsive" src="<%= image_path('a1.jpg') %>">
                    <div class="m-t-xs font-bold"><%= instructor.initials %> </div>
                </div>
            </div>
            <div class="col-sm-8">
                <h3><strong><%= instructor.first_name %> <%= instructor.last_name %></strong></h3>
                <p><em> <%= instructor.age %> years old</em></p>
                <address>
                    <hr>
                    <%= instructor.address %><br>
                    <%= instructor.city %>, <%= instructor.province %> <% instructor.postal_code %><br>
                    
                    P: <%= instructor.humanize_phone%><br>
                    E: <%=instructor.email%>
                </address>
                <div class="row">
                    <div class="col-md-12">
                         <button href="mailto:<%= instructor.email %>" type="button" class="btn btn-primary btn-sm btn-block"><i class="fa fa-envelope"></i> Send Message</button>
                    </div>   
                </div>
            </div>
            <div class="clearfix"></div>
        </a>
    </div>
    </div>
<% end %>
    
        </div>
        </div>

